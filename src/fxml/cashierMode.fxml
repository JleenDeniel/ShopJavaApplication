<VBox prefHeight="358.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.CashierModeController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Параметры">
               <items>
                  <MenuItem fx:id="storageModeBtn" mnemonicParsing="false" onAction="#storageModeBtn" text="Режим склада" />
               </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Помощь">
          <items>
            <MenuItem mnemonicParsing="false" text="О режиме кассы" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="344.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
      <children>
            <Label layoutX="362.0" layoutY="19.0" prefHeight="55.0" prefWidth="65.0" text="Сумма:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="sumLabel" layoutX="444.0" layoutY="19.0" prefHeight="55.0" prefWidth="162.0">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <GridPane layoutX="63.0" layoutY="79.0" prefHeight="218.0" prefWidth="189.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button fx:id="findGoodByCodeBtn" mnemonicParsing="false" onAction="#findGoodBtnClick" prefHeight="30.0" prefWidth="170.0" text="Поиск товара">
                     <GridPane.margin>
                        <Insets />
                     </GridPane.margin>
                  </Button>
                  <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="170.0" text="Удалить товар" GridPane.rowIndex="1" />
                  <Button fx:id="cardnumBtn" mnemonicParsing="false" onAction="#cardnumBtn" prefHeight="30.0" prefWidth="170.0" text="Карта покупателя" GridPane.rowIndex="2" />
                  <Button fx:id="makePayment" mnemonicParsing="false" onAction="#makePaymentBtn" prefHeight="30.0" prefWidth="170.0" text=" Оплата" GridPane.rowIndex="3" />
               </children>
            </GridPane>
            <TextArea fx:id="receiptArea" editable="false" layoutX="326.0" layoutY="76.0" prefHeight="224.0" prefWidth="269.0">
               <font>
                  <Font name="Courier New" size="14.0" />
               </font>
            </TextArea>
            <Label layoutX="63.0" layoutY="24.0" prefHeight="55.0" prefWidth="208.0" text="Выберите действие:">
               <font>
                  <Font name="Courier New" size="18.0" />
               </font>
            </Label>
      </children>
    </AnchorPane>
  </children>
</VBox>
